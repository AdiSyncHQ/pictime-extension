{
    "manifest_version": 3,
    "name": "Pic-Time Downloader",
    "version": "1.2.0",
    "description": "Opens a URL, captures the dashboard POST JSON, and shows projects in the popup with persistence.",
    "permissions": ["downloads.open", "storage","downloads","tabs","scripting","activeTab"],
    "host_permissions": [
       "*://*.pic-time.com/*",
       "*://*.a02.azurefd.net/*"
    ],
    "action": {
      "default_title": "Pic-Time Sniffer",
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["https://*.pic-time.com/*"],
        "js": ["content-main.js"],
        "run_at": "document_start",
        "world": "MAIN"
      },
      {
        "matches": ["https://*.pic-time.com/*"],
        "js": ["content-isolated.js"],
        "run_at": "document_start",
        "world": "ISOLATED"
      }
    ]
  }
  